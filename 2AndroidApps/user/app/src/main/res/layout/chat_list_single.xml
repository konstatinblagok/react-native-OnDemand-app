<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <com.a2zkajuser.core.widgets.RoundedImageView
        android:id="@+id/chat_list_single_userImageView"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
         />

    <com.a2zkajuser.core.widgets.CustomTextView
        android:id="@+id/chat_list_single_time_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:singleLine="true"
        android:text="7 hours ago"
        android:textColor="#A0A0A0"
        android:textSize="14sp"
        android:textStyle="bold" />

    <com.a2zkajuser.core.widgets.CustomTextView
        android:id="@+id/chat_list_single_userName_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="23dp"
        android:layout_toEndOf="@+id/chat_list_single_userImageView"
        android:singleLine="true"
        android:text="Prem Kumar"
        android:textColor="#131313"
        android:textSize="19sp"
        android:textStyle="bold" />

    <com.a2zkajuser.core.widgets.CustomTextView
        android:id="@+id/chat_list_single_message_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_list_single_userName_textView"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/chat_list_single_userImageView"
        android:singleLine="true"
        android:text="Hi this is prem.check thsuibkh dh  djoj dojosdsds   s"
        android:textColor="#A0A0A0"
        android:textSize="15sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/chat_list_single_view"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@+id/chat_list_single_userImageView"
        android:layout_marginRight="10dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/chat_list_single_userImageView"
        android:background="#A0A0A0" />

</RelativeLayout>