<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/plumbal_money_webView_headerBar_container_header"
        layout="@layout/toolbar_layout_without_shadow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <ProgressBar
        android:id="@+id/plumbal_money_webView_progressbar"
        style="@style/SmallProgressBarHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plumbal_money_webView_headerBar_container_header"
        android:progressDrawable="@drawable/greenprogress"
        android:visibility="gone"/>

    <WebView
        android:id="@+id/plumbal_money_webView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/plumbal_money_webView_progressbar"/>

</RelativeLayout>