<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_profile_bottom_chatAndCall_layout"
        android:scrollbars="none">

        <RelativeLayout
            android:id="@+id/layout_profile_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="fill_parent"
                android:layout_height="280dp"
                android:background="#155b75">

                <com.a2zkajuser.core.widgets.CustomTextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reviwes_profileimg"
                    android:layout_centerHorizontal="true"
                    android:text="UserName"
                    android:textColor="#FFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <com.a2zkajuser.core.widgets.RoundedImageView
                    android:id="@+id/reviwes_profileimg"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="45dp"
                    android:src="@drawable/profile" />

                <ImageView
                    android:id="@+id/ratingimage"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_above="@+id/username"
                    android:layout_marginRight="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/reviwes_profileimg"
                    android:src="@drawable/ratingstar" />

                <com.a2zkajuser.core.widgets.CustomTextView
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/username"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="13dp"
                    android:layout_toRightOf="@+id/reviwes_profileimg"
                    android:text="5.0"
                    android:textColor="#FFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_below="@+id/reviwes_profileimg"
                    android:layout_marginTop="90dp"
                    android:background="#FFF"></View>

                <View
                    android:id="@+id/view2"
                    android:layout_width="2px"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/view1"
                    android:layout_marginLeft="120dp"
                    android:background="#FFF"></View>

                <View
                    android:id="@+id/view3"
                    android:layout_width="2px"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/view1"
                    android:layout_marginRight="120dp"
                    android:background="#FFF"></View>

                <com.a2zkajuser.core.widgets.CustomTextView
                    android:id="@+id/radius_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view1"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="6dp"
                    android:text="@string/activity_tasker_profile_view_radius"
                    android:textColor="#FFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.a2zkajuser.core.widgets.CustomTextView
                    android:id="@+id/radius"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/radius_text"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="6dp"
                    android:text="50 Km"
                    android:textColor="#FFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />


                <com.a2zkajuser.core.widgets.CustomTextView
                    android:id="@+id/hour_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="6dp"
                    android:text="@string/activity_tasker_profile_view_hourly_cost"
                    android:textColor="#FFF"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <com.a2zkajuser.core.widgets.CustomTextView
                    android:id="@+id/h_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hour_cost"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="6dp"
                    android:text="50 $"
                    android:textColor="#FFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.a2zkajuser.core.widgets.CustomTextView
                    android:id="@+id/maximum_cost_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/view1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="6dp"
                    android:text="@string/activity_tasker_profile_view_mini_cost"
                    android:textColor="#FFF"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <com.a2zkajuser.core.widgets.CustomTextView
                    android:id="@+id/maximum_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/hour_cost"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="6dp"
                    android:text="50 $"
                    android:textColor="#FFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.a2zkajuser.core.widgets.CustomTextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/username"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:text="ksvapplication91@gmail.com"
                    android:textColor="#FFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.a2zkajuser.core.widgets.CustomTextView
                    android:id="@+id/mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/email"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:text="0989459067"
                    android:textColor="#FFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/layout_edit_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:visibility="gone">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/editprofile" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header">

                <RelativeLayout
                    android:id="@+id/address_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >

                    <RelativeLayout
                        android:id="@+id/address_text"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="6dp"
                        android:background="#155b75">

                        <ImageView
                            android:id="@+id/address_icon1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/addresswhite" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/whitearrow_down" />

                        <com.a2zkajuser.core.widgets.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/address_icon1"
                            android:text="@string/activity_tasker_profile_view_address"
                            android:textColor="#FFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/address_icon"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="60dp"
                        android:src="@drawable/dot_icon" />

                    <com.a2zkajuser.core.widgets.CustomTextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/address_text"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginTop="18dp"
                        android:layout_toRightOf="@+id/address_icon"
                        android:text="No.7, (Old No.3), Cenotaph Road, 1st Street, Teynampet
044 2433 4434
Open until 5:00 PM"
                        android:textColor="#8e8e8e"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/addressview"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_below="@+id/address"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:background="#9b9b9b"
                        android:visibility="gone"></View>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/category_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/address_layout"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:id="@+id/category_text"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="6dp"
                        android:background="#155b75">

                        <ImageView
                            android:id="@+id/category_icon1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:src="@mipmap/category_icon" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/whitearrow_down" />

                        <com.a2zkajuser.core.widgets.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/category_icon1"
                            android:text="@string/activity_tasker_profile_view_category"
                            android:textColor="#FFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/category_icon"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="60dp"
                        android:src="@drawable/dot_icon" />

                    <com.a2zkajuser.core.widgets.CustomTextView
                        android:id="@+id/category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/category_text"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="18dp"
                        android:layout_toRightOf="@+id/category_icon"
                        android:text="Kitchen Cleaning"
                        android:textColor="#8e8e8e"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/categoryview"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_below="@+id/category"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:background="#9b9b9b"
                        android:visibility="gone"></View>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/location_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/category_layout"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:id="@+id/location_text"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="6dp"
                        android:background="#155b75">

                        <ImageView
                            android:id="@+id/location_icon1"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/workinglocation" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/whitearrow_down" />

                        <com.a2zkajuser.core.widgets.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/location_icon1"
                            android:text="@string/activity_tasker_profile_view_work_location"
                            android:textColor="#FFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/location_icon"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="60dp"
                        android:src="@drawable/dot_icon" />

                    <com.a2zkajuser.core.widgets.CustomTextView
                        android:id="@+id/working_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/location_text"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="18dp"
                        android:layout_toRightOf="@+id/location_icon"
                        android:text="68, College Road, E.V.K. Sampath Maaligai, 7th Floor, Numgambakkam
044 2825 1323
Open until 6:00 PM"
                        android:textColor="#8e8e8e"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/locationview"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_below="@+id/working_location"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:background="#9b9b9b"
                        android:visibility="gone"></View>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/experience_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/location_layout"
                    android:layout_marginTop="10dp"
                    android:visibility="gone">

                    <RelativeLayout
                        android:id="@+id/experience_text"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="6dp"
                        android:background="#155b75">

                        <ImageView
                            android:id="@+id/experience_icon1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/workexp" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/whitearrow_down" />

                        <com.a2zkajuser.core.widgets.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/experience_icon1"
                            android:text="@string/activity_tasker_profile_view_working_experience"
                            android:textColor="#FFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/experience_icon"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="60dp"
                        android:src="@drawable/dot_icon" />

                    <com.a2zkajuser.core.widgets.CustomTextView
                        android:id="@+id/experience_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/experience_text"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="18dp"
                        android:layout_toRightOf="@+id/experience_icon"
                        android:text="Experience 7 years "
                        android:textColor="#8e8e8e"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/experienceview"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_below="@+id/experience_location"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:background="#9b9b9b"
                        android:visibility="gone"></View>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/availability_layout"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_below="@+id/experience_layout"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:id="@+id/availability_text"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="6dp"
                        android:background="#155b75">

                        <ImageView
                            android:id="@+id/availability_icon1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/tickicon" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/whitearrow_down" />

                        <com.a2zkajuser.core.widgets.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/availability_icon1"
                            android:text="@string/activity_tasker_profile_view_TXT_availability_title"
                            android:textColor="#FFF"
                            android:textSize="16sp"
                            android:textStyle="normal" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/avail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/availability_text">

                        <com.a2zkajuser.core.widgets.CustomTextView
                            android:id="@+id/availability"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="6dp"
                            android:text="@string/activity_tasker_profile_view_availability"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="normal" />

                        <LinearLayout
                            android:id="@+id/day_session"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_below="@+id/availability"
                            android:weightSum="4">

                            <com.a2zkajuser.core.widgets.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.1" />

                            <com.a2zkajuser.core.widgets.CustomTextView
                                android:id="@+id/mor"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:paddingLeft="10dp"
                                android:text="@string/mor"
                                android:textColor="#9b9b9b"
                                android:textSize="15sp"
                                android:textStyle="normal" />

                            <com.a2zkajuser.core.widgets.CustomTextView
                                android:id="@+id/after"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:paddingLeft="10dp"
                                android:text="@string/after"
                                android:textColor="#9b9b9b"
                                android:textSize="15sp"
                                android:textStyle="normal" />

                            <com.a2zkajuser.core.widgets.CustomTextView
                                android:id="@+id/eve"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:paddingLeft="10dp"
                                android:text="@string/eve"
                                android:textColor="#9b9b9b"
                                android:textSize="15sp"
                                android:textStyle="normal" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_below="@+id/day_session"
                            android:weightSum="4">

                            <com.a2zkajuser.core.widgets.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.1" />

                            <com.a2zkajuser.core.widgets.CustomTextView
                                android:id="@+id/mor_time"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:paddingLeft="10dp"
                                android:text="(8Am-12Pm)"
                                android:textColor="#8e8e8e"
                                android:textSize="9sp" />

                            <com.a2zkajuser.core.widgets.CustomTextView
                                android:id="@+id/after_time"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:paddingLeft="10dp"
                                android:text="(12Pm-4Pm)"
                                android:textColor="#8e8e8e"
                                android:textSize="9sp" />

                            <com.a2zkajuser.core.widgets.CustomTextView
                                android:id="@+id/eve_time"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:paddingLeft="10dp"
                                android:text="(4Pm-8Pm)"
                                android:textColor="#8e8e8e"
                                android:textSize="9sp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_below="@+id/avail">

                        <ListView
                            android:id="@+id/list"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:focusable="false"></ListView>
                    </RelativeLayout>


                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_profile_noInternet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">


                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:fillViewport="true">

                    <include
                        android:id="@+id/profilereviwes_nointernet_include"
                        layout="@layout/no_internet_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />

                </ScrollView>


            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>


    <RelativeLayout
        android:id="@+id/view_profile_bottom_chatAndCall_layout"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="#E8A68C">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/view_profile_chat_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#017500"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/view_profile_chat_icon" />

                <com.a2zkajuser.core.widgets.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="@string/myJobs_label_chat"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/view_profile_call_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#026CB6"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/tickicon" />

                <com.a2zkajuser.core.widgets.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="@string/confirmbook_caps"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>


