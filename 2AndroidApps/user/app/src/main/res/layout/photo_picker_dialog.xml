<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cdcdcd">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/photo_picker_title_layout"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#ffffff"
            android:visibility="gone">

            <com.a2zkajuser.core.widgets.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:text="@string/takePhoto_title"
                android:textColor="#4e4e4e"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:id="@+id/photo_picker_view1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/photo_picker_title_layout"
            android:layout_marginTop="5dp"
            android:background="#cdcdcd"
            android:visibility="invisible"/>

        <RelativeLayout
            android:id="@+id/photo_picker_camera_layout"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/photo_picker_view1"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#ffffff">

            <com.a2zkajuser.core.widgets.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:text="@string/takePhoto_camera"
                android:textColor="#4e4e4e"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:id="@+id/photo_picker_view2"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/photo_picker_camera_layout"
            android:layout_marginTop="5dp"
            android:background="#cdcdcd" />

        <RelativeLayout
            android:id="@+id/photo_picker_gallery_layout"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/photo_picker_view2"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:background="#ffffff">

            <com.a2zkajuser.core.widgets.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:text="@string/takePhoto_gallery"
                android:textColor="#4e4e4e"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/photo_picker_gallery_layout"
            android:layout_marginTop="5dp"
            android:background="#00000000" />
    </RelativeLayout>

</RelativeLayout>