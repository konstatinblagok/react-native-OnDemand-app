<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_banner_bg">

    <RelativeLayout
        android:id="@+id/forgot_password_otp_header_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/forgot_password_otp_header_back_layout"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="26dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:background="@null"
                android:src="@drawable/back_arrow" />
        </RelativeLayout>

        <com.a2zkajuser.core.widgets.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/forgot_password_otp_header_back_layout"
            android:text="@string/otp_label_verification"
            android:textColor="#FFFFFF"
            android:textSize="19sp" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/forgot_password_otp_header_layout"
        android:background="#00000000"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#00000000">

            <com.a2zkajuser.core.widgets.CustomEdittext
                android:id="@+id/forgot_password_otp_password_editText"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_above="@+id/forgot_password_otp_center_view"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="#CCffffff"
                android:hint="@string/otp_label_enter_otp"
                android:imeOptions="actionDone"
                android:inputType="textImeMultiLine"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#3f3e3e"
                android:textColorHint="#3f3e3e"
                android:textCursorDrawable="@drawable/edittext_cursor_color"
                android:textSize="15dp" />

            <View
                android:id="@+id/forgot_password_otp_center_view"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="invisible" />

            <com.a2zkajuser.core.widgets.CustomButton
                android:id="@+id/forgot_password_otp_submit_button"
                android:layout_width="fill_parent"
                android:layout_height="43dp"
                android:layout_below="@+id/forgot_password_otp_center_view"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="#D5D4D2"
                android:text="@string/otp_label_send"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="normal" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>