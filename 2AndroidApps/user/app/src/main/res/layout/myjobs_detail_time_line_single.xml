<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5ED">


    <com.a2zkajuser.core.widgets.CustomTextView
        android:id="@+id/myJob_detail_status_single_date_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text=""
        android:textColor="#9b9999"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/myJob_detail_status_single_report_imageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/myJob_detail_status_single_date_textView"
        android:src="@drawable/tick_circle_icon" />

    <View
        android:id="@+id/myJob_detail_requestSubmitted_view"
        android:layout_width="20dp"
        android:layout_height="1dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/myJob_detail_status_single_report_imageView"
        android:background="#16a085" />

    <View
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:layout_below="@+id/myJob_detail_status_single_report_imageView"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/myJob_detail_status_single_date_textView"
        android:background="#16a085" />

    <com.a2zkajuser.core.widgets.CustomTextView
        android:id="@+id/myJob_detail_status_single_status_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_toRightOf="@+id/myJob_detail_requestSubmitted_view"
        android:text=""
        android:textColor="#4e4e4e"
        android:textSize="15sp" />

</RelativeLayout>