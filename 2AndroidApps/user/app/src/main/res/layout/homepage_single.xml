<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="135dp">

        <ImageView
            android:id="@+id/category_single_imageView"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:fitsSystemWindows="true"
            android:scaleType="fitXY" />

        <View
            android:id="@+id/category_single_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@xml/gradient_imageview"
            android:visibility="visible" />


        <com.a2zkajuser.core.widgets.CustomTextView
            android:id="@+id/category_single_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/category_single_view"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="17sp" />

    </RelativeLayout>


</RelativeLayout>