<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/headerBar_layout"
        android:layout_width="fill_parent"
        android:layout_height="53dp"
        android:background="@color/app_color"
        android:minHeight="?attr/actionBarSize">

        <RelativeLayout
            android:id="@+id/headerBar_left_layout"
            android:layout_width="45dp"
            android:layout_height="fill_parent"
            android:background="#00000000">

            <ImageView
                android:id="@+id/headerBar_imageView"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <com.a2zkajuser.core.widgets.CustomTextView
            android:id="@+id/headerBar_title_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="17sp" />

    </RelativeLayout>


    <View
        android:id="@+id/toolbar_shadow"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/headerBar_layout"
        android:background="@xml/toolbar_shadow" />


</RelativeLayout>
