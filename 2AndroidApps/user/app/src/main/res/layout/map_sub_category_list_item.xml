<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <com.a2zkajuser.core.widgets.RoundedImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:id="@+id/sub_category_image"/>
        <com.a2zkajuser.core.widgets.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sub_category_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="#4e4e4e"
            android:gravity="center"
            android:text="genereal plumbing"
            android:textSize="9sp"
            android:id="@+id/sub_category_text"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="54dp"
            android:background="#696969"
            android:layout_centerInParent="true"
            android:id="@+id/fav_view"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>

</RelativeLayout>