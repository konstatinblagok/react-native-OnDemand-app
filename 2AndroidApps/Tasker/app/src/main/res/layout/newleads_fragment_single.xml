<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/layout_details"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#e5e6eb">

        <android.support.v7.widget.CardView
            android:id="@+id/newleads_cardView_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            card_view:cardBackgroundColor="#FAFAFA"
            card_view:cardElevation="3dp">


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">

                <RelativeLayout
                    android:id="@+id/newleads_single_header_layouts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_margin="5dp"
                    android:visibility="visible">

                    <core.Widgets.CustomTextView
                        android:id="@+id/newleads_orderid_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="7dp"
                        android:text="@string/jobs_orderid_label"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                    <core.Widgets.CustomTextView
                        android:id="@+id/newleads_orderid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="7dp"
                        android:layout_toRightOf="@+id/newleads_orderid_textView"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:textStyle="bold" />


                </RelativeLayout>


                <View
                    android:id="@+id/newleads_view"
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:layout_below="@+id/newleads_single_header_layouts"
                    android:layout_marginTop="2dp"
                    android:background="#cdcdcd"
                    android:visibility="visible" />


                <RelativeLayout
                    android:id="@+id/newleads_single_profiles_layouts"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/newleads_view">


                    <RelativeLayout
                        android:id="@+id/newsingle_calldetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp">


                        <core.Widgets.CustomTextView
                            android:id="@+id/new_Job_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="5dp"
                            android:text="fdsfds"
                            android:textColor="#000000"
                            android:visibility="gone" />

                    </RelativeLayout>


                    <core.Widgets.RoundedImageView
                        android:id="@+id/newleads_profileimg"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/nouserimg" />

                    <core.Widgets.CustomTextView
                        android:id="@+id/newleads_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/newleads_profileimg"
                        android:text="fdgf"
                        android:textColor="#000000"
                        android:textSize="15sp" />


                    <core.Widgets.CustomTextView
                        android:id="@+id/newleads_job_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/newleads_username"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/newleads_profileimg"
                        android:text="dxfxfd"
                        android:textColor="#818181"
                        android:textSize="14sp" />


                    <core.Widgets.CustomTextView
                        android:id="@+id/newleads_jobtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/newleads_job_type"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/newleads_profileimg"
                        android:text="sfsa"
                        android:textColor="#818181"
                        android:textSize="14sp" />


                    <RelativeLayout
                        android:id="@+id/newleads_location_layouts"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/newleads_jobtime"
                        android:layout_toRightOf="@+id/newleads_profileimg">


                        <ImageView
                            android:id="@+id/newleads_map_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/location_marker" />


                        <core.Widgets.CustomTextView
                            android:id="@+id/newkleads_locationTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@+id/newleads_map_icon"
                            android:text="sfd"
                            android:textColor="#818181"
                            android:textSize="12sp" />

                    </RelativeLayout>


                </RelativeLayout>


            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <core.Widgets.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_below="@+id/newleads_cardView_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" />


    </RelativeLayout>


</RelativeLayout>