<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/no_newleads_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#e1e1e1"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/layout_nocredits"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:background="#155b75">


            <core.Widgets.CustomTextView
                android:id="@+id/no_leads_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/no_chat_label"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </RelativeLayout>


        <ImageView
            android:id="@+id/refresh_img"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_below="@+id/layout_nocredits"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/pulltorefreshimg" />


    </RelativeLayout>


</RelativeLayout>