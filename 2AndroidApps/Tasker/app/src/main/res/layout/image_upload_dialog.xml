<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cdcdcd">

    <RelativeLayout
        android:id="@+id/layout_addimg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/profilelayout"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#ffffff">

            <core.Widgets.CustomTextView
                android:id="@+id/howtotake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:text="@string/takephoto"
                android:textColor="#4e4e4e"
                android:textSize="15sp"
                android:typeface="sans" />
        </RelativeLayout>

        <View
            android:id="@+id/addimg_view1"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_below="@+id/profilelayout"
            android:layout_marginTop="5dp"
            android:background="#cdcdcd" />

        <RelativeLayout
            android:id="@+id/profilelayout_takephotofromcamera"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/addimg_view1"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#ffffff">

            <core.Widgets.CustomTextView
                android:id="@+id/exist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:text="@string/camra"
                android:textColor="#4e4e4e"
                android:textSize="15sp"
                android:typeface="sans" />
        </RelativeLayout>

        <View
            android:id="@+id/addimg_view2"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_below="@+id/profilelayout_takephotofromcamera"
            android:layout_marginTop="5dp"
            android:background="#cdcdcd" />

        <RelativeLayout
            android:id="@+id/profilelayout_takephotofromgallery"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/addimg_view2"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:background="#ffffff">

            <core.Widgets.CustomTextView
                android:id="@+id/choosegallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:text="@string/existingcamera"
                android:textColor="#4e4e4e"
                android:textSize="15sp"
                android:typeface="sans" />
        </RelativeLayout>

        <View
            android:id="@+id/addimg_view3"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_below="@+id/profilelayout_takephotofromgallery"
            android:layout_marginTop="5dp"
            android:background="#00000000" />
    </RelativeLayout>

</RelativeLayout>